{
  "name": "bandit-prototype",
  "scripts": {
    "watch": "watchify src/bandits.ts -p [tsify] -v --debug -o bundle.js",
    "build-js": "browserify src/bandits.ts -p [tsify] | uglifyjs -c > bundle.js",
    "build": "npm run build-js",
    "serve-watch": "concurrently \"serve\" \"npm run watch\""
  },
  "dependencies": {
    "d3": "^7.9.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.12.12",
    "browserify": "^17.0.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "serve": "^14.2.3",
    "tsify": "^5.0.4",
    "typescript": "^5.4.5",
    "uglify-js": "^3.17.4",
    "watchify": "^4.0.0"
  }
}
