---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, title, institute, profilePicture} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Just another <span class='text-secondary'>{fullName}</span>
  </h1>
  <p class='text-xl text-gray-600 mb-4'>{title}{institute ? ` at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    Welcome to my website! I am one of many "{fullName}"s...
    <br>
    One day I'll get around to changing my name.
  </p>
  <p class='text-lg mb-6'>
    <b>Currently:</b> 1st year MSCS: Artificial Intelligence @ Stanford.
    <br>
    <b>Previously:</b> SWE @ Meta on FB (notifications, birthdays, feed, comments).
    <br>
    <b>Previously:</b> Computer Science @ CMU.
  </p>
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
<div class='size-72 lg:block hidden'>
  <!-- Add your profile image -->
  <Image
    src={profilePicture}
    alt={fullName}
    class='w-full h-full mask mask-circle size-44'
  />
</div>
